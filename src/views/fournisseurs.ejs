<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= data.page_title  %></title>
    <meta name="viewport"
        content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="msapplication-tap-highlight" content="no">
    <link href="../static/css/main.css" rel="stylesheet">
    <link href="../static/css/fournisseurs.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</head>

<body>
    <div class="app-container">
        <%- include('./partials/header.ejs') %>
        <div class="app-main">
            <%- include('./partials/sidebar.ejs') %>
            <div class="app-main__outer" style="background-color:aliceblue">
                <div class="app-main__inner">
                    <div class="app-page-title">
                        <div class="page-title-wrapper">
                            <div class="page-title-heading">
                                <div class="page-title-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div>Fournisseurs
                                    <div class="page-title-subheading">La liste des fournisseurs.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <div class="card-title">
                                        <div style="font-size: 30px;" class="row">
                                            <div class="col-lg-6">Fournisseurs</div>
                                            <div class="col-lg-6">
                                                <div data-toggle="modal" data-target="#myModal1"><i
                                                        style="float:right;margin-right: 30px;" class="fas fa-plus"></i>
                                                </div>
                                            </div>
                                        </div>
    
    
                                    </div>
    
                                    <table class="mb-0 table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Code</th>
                                                <th>Societe</th>
                                                <th>Contact</th>
                                                <th>Telephone</th>
                                                <th>Email</th>
                                                <th>Adresse</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(data.length == 0) {%>
                                                <tr> <td style="text-align:center;" colspan="75%" >Table vide</td></tr>
                                             <%} else {%>
                                            <% for(let i=0;i < data.length; i++) {%>
                                                <tr>
                                                    <th scope='row'>
                                                        <%=data[i].Code_fournisseur%>
                                                    </th>
                                                    <td>
                                                        <%=data[i].Societe_fournisseur%>
                                                    </td>
                                                    <td>
                                                        <%=data[i].contact_fournisseur%>
                                                    </td>
                                                    <td>
                                                        <%=data[i].telephone_fournisseur%>
                                                    </td>
                                                    <td>
                                                        <%=data[i].email_fournisseur%>
                                                    </td>
                                                    <td>
                                                        <%=data[i].adresse_fournisseur%>
                                                    </td>
                                                    <td style="text-align:center;">
                                                        <div class='delete-btn' id="<%-data[i].Code_fournisseur%>">
                                                            <i class='fa fa-trash' aria-hidden='true'></i>
                                                        </div>
                                                        <div class='edit-btn' data-toggle="modal" data-target="#myModal2" id="<%-data[i].Code_fournisseur%>">
                                                            <i class="fas fa-edit" aria-hidden='true'></i>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <%}%>
                                            <%}%>
    
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="myModal1" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form action="/addfournisseur" method="post" style="width:100%;margin:auto">
                        <div class="modal-body">
                            <h2>Fournisseur information</h2>
                            <hr>
                            <div class="input-container">
                                <input class="input-field" type="text" placeholder="Societe" name="societe">
                            </div>
    
                            <div class="input-container">
                                <input class="input-field" type="text" placeholder="Contact" name="contact">
                            </div>
    
                            <div class="input-container">
                                <input class="input-field" type="text" placeholder="Telephone" name="telephone">
                            </div>
                            <div class="input-container">
                                <input class="input-field" type="text" placeholder="Email" name="email">
                            </div>
    
                            <div class="input-container">
                                <input class="input-field" type="text" placeholder="adresse"
                                    name="adresse">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="SaveFournisseur" type="submit" class="btn btn-primary">Save changes</button>
                            <button onclick="CloseModal()" type="button" class="btn btn-secondary"
                                data-dismiss="modal">Close</button>
                        </div>
                    </form>
    
    
                </div>
            </div>
        </div>

        <div id="myModal2" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form style="width:100%;margin:auto">
                        <div class="modal-body">
                            <h2>Information à modifier</h2>
                            <hr>
                            <label for="fournisseur" class="">Valeur à modifier </label>
                            <select class="form-control" id="fournisseur" name="fournisseur">
                                <option value="societe">Societe</option>
                                <option value="contact">Contact</option>
                                <option value="email">Email</option>
                                <option value="Adresse">Adresse</option>
                                <option value="Telephone">Telephone</option>
                            </select>
                            <br>
                                <label for="updatedValue" class="">Nouvelle valeur : </label>
                                <input class="form-control" type="text" placeholder="" name="updatedValue" id="updatedValue">
    
                        </div>
                        <div class="message" style="color:red">

                        </div>
                        <div class="modal-footer">
                            <div id="save-edit-btn" class="btn btn-primary">Save changes</div>
                            <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</body>
<script src="../static/js/fournisseurs.js"></script>
<script src="../static/js/main.js"></script>
</html>