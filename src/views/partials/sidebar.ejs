<script>
    let url = window.location.href.toString().split(window.location.host)[1]
    document.querySelectorAll("a").forEach((data)=>{
        if (data.href.toString().split(window.location.host)[1] == url){
            data.setAttribute("class","mm-active");
        }
    });
</script>